<script src="~/Scripts/Academics/Department.js"></script>

@{
    ViewBag.Title = "Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div align="left" style="padding:10px;">
            <button class="btn btn-success" type="button" data-toggle="modal" onclick="return _clearAddDepart();" data-target="#AddDepart"><i class="fa fa-save"></i> Create New</button>
        </div>
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Tables</h3>

            </div><!-- /.box-header -->
            <div class="box-body table-responsive">
                <table id="tblDepartment" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Department Code</th>
                            <th>Department Name</th>
                            <th>&nbsp;</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody class="body" id="tblDepartmentList"></tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div><!-- /.box -->
    </div>




    <!-- Add User Modal -->
    <div class="modal fade" id="AddDepart" tabindex="-1" role="dialog" aria-labelledby="myModalLabel3">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel3">Add Department</h4>
                </div>
                <div class="modal-body">
                    <form id="FormAddDepart" name="FormAddDepart">
                        <fieldset>
                            <div class="form-group">
                                <label class="control-label">
                                    Department Code <span id="ErrAddDepartCode" style="color:red;"></span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                    <input type="text" class="form-control" name="AddDepartCode" id="AddDepartCode" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">
                                    Department Title <span id="ErrAddDepartTitle" style="color:red;"></span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                    <input type="text" class="form-control" name="AddDepartTitle" id="AddDepartTitle" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">
                                    Description <span id="ErrAddDepartDescript" style="color:red;"></span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                    <input type="text" class="form-control" name="AddDepartDescript" id="AddDepartDescript" />
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>

                <div class="panel-footer" align="right">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" onclick="return _addDepart();">Save</button>
                </div>

            </div>
        </div>
    </div>
    <!-- End Add User Modal -->
    <!-- Edit User Modal -->
    <div class="modal fade" id="EditDepart" tabindex="-1" role="dialog" aria-labelledby="myModalLabel3">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel3">Edit Department</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <form id="FormUpdDepart" name="FormUpdDepart">
                            <fieldset>
                                <div class="form-group">
                                    <label class="control-label">
                                        Department Code <span id="ErrUpdDepartCode" style="color:red;"></span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                        <input type="text" class="form-control" name="UpdDepartCode" id="UpdDepartCode" />
                                        <input type="hidden" class="form-control" name="UpdDepartId" id="UpdDepartId" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">
                                        Department Title <span id="ErrUpdDepartTitle" style="color:red;"></span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                        <input type="text" class="form-control" name="UpdDepartTitle" id="UpdDepartTitle" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">
                                        Description <span id="ErrUpdDepartDescript" style="color:red;"></span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                        <input type="text" class="form-control" name="UpdDepartDescript" id="UpdDepartDescript" />
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>

                </div>
                <div class="panel-footer" align="right">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" onclick="return _editDepart();">Save</button>
                </div>
            </div>
        </div>
    </div>
    <!-- End Edit User Modal -->
    <!-- Remove User Modal -->
    <div class="modal fade" id="RemoveDepart" tabindex="-1" role="dialog" aria-labelledby="myModalLabel3">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel3">Remove Department</h4>
                </div>
                <form id="FormDelDepart" name="FormDelDepart">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                Are you sure you want to delete this Department?
                                <input type="hidden" class="form-control" id="DepartId">
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer" align="right">
                        <button type="button" class="btn btn-success" data-dismiss="modal">No</button>
                        <button type="button" class="btn btn-primary" onclick="return _deleteDepart();">Yes</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
    <!-- End Remove Modal -->
</div>