@{
    ViewBag.Title = "Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/js/Academics/department.js"></script>

<div class="row">
    <div class="col-xs-12">
        <div align="left" style="padding:10px;">
            <button class="btn btn-success" type="button" data-toggle="modal" onclick="clearDepartmentForm();" data-target="#addDepartment"><i class="fa fa-save"></i> Create New</button>
        </div>
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Tables</h3>

            </div><!-- /.box-header -->
            <div class="box-body table-responsive">
                <table id="tblDepartment" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="align-center">Department Code</th>
                            <th class="align-center">Department Name</th>
                            <th>&nbsp;</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody class="body" id="tblBodyDepartmentList"></tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div><!-- /.box -->
    </div>

    <!-- Add User Modal -->
    <div class="modal fade" id="addDepartment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel3">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel3">Add Department</h4>
                </div>
                <div class="modal-body">
                    <form id="frmAddDepartment" name="frmAddDepartment">
                        <fieldset>
                            <div class="form-group">
                                <label class="control-label">
                                    Department Code <span id="errorDepartmentCode" style="color:red;"></span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                    <input type="text" class="form-control" name="departmentCode" id="departmentCode" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">
                                    Department Name <span id="errorDepartmentName" style="color:red;"></span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                    <input type="text" class="form-control" name="departmentName" id="departmentName" />
                                    <input type="hidden" class="form-control" name="departmentIsActive" id="departmentIsActive" value="true"/>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
                <div class="panel-footer" align="right">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" onclick="addDepartment();">Save</button>
                </div>

            </div>
        </div>
    </div>
    <!-- End Add User Modal -->
    
    <!-- Edit User Modal -->
    <div class="modal fade" id="editDepartment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel3">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel3">Edit Department</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <form id="frmEditDepartment" name="frmEditDepartment">
                            <fieldset>
                                <div class="form-group">
                                    <label class="control-label">
                                        Department Code <span id="errorEditDepartmentCode" style="color:red;"></span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                        <input type="text" class="form-control" name="editDepartmentCode" id="editDepartmentCode" />
                                        <input type="hidden" class="form-control" name="editDepartmentID" id="editDepartmentID" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">
                                        Department Name <span id="errorEditDepartmentName" style="color:red;"></span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                        <input type="text" class="form-control" name="editDepartmentName" id="editDepartmentName" />
                                        <input type="hidden" class="form-control" name="editDepartmentIsActive" id="editDepartmentIsActive" />
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
                <div class="panel-footer" align="right">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" onclick="editDepartment();">Save</button>
                </div>
            </div>
        </div>
    </div>
    <!-- End Edit User Modal -->
    
    <!-- Remove User Modal -->
    <div class="modal fade" id="removeDepartment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel3">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel3">Remove Department</h4>
                </div>
                <form id="frmRemoveDepartment" name="frmRemoveDepartment">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                Are you sure you want to delete this department?
                                <input type="hidden" class="form-control" id="removeDepartmentID"/>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer" align="right">
                        <button type="button" class="btn btn-success" data-dismiss="modal">No</button>
                        <button type="button" class="btn btn-primary" onclick="deactivateDepartment();">Yes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- End Remove Modal -->
</div>